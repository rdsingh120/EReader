<Window x:Class="EReader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EReader"
        mc:Ignorable="d"
        Title="MainWindow" MaxHeight="400" MinHeight="400" Width="500" MinWidth="500" MaxWidth="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Image Source="/images/logo.png" Width="150" Height="100" />
        <TextBlock Grid.Row="1" Text="Amazon DynamoDB Service" VerticalAlignment="Top" HorizontalAlignment="Center" FontSize="25" FontWeight="Bold" Margin="0 0 0 20"/>
        <Grid Grid.Row="2" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label Content="Username" VerticalContentAlignment="Center" HorizontalContentAlignment="left" FontSize="20" FontWeight="Medium" Margin="50 0 50 0"/>
            <TextBox x:Name="UsernameTextBox" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"  FontSize="20" Padding="5" Margin="0 0 50 0"/>
        </Grid>

        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Password" VerticalContentAlignment="Center" HorizontalContentAlignment="left" FontSize="20" FontWeight="Medium" Margin="50 0 55 0"/>
            <PasswordBox x:Name="LoginPasswordBox" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Stretch"  FontSize="20" Padding="5" Margin="0 0 50 0"/>
        </Grid>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="LoginButton" Grid.Column="1" Content="Login" HorizontalAlignment="Stretch" Margin="200 10 50 10" Padding="40 5 40 5" FontSize="20" Click="LoginButton_Click"/>
        </Grid>
        <Label Grid.Row="5" Content="Ripudaman Singh" VerticalContentAlignment="Center" FontSize="15" Margin="20 0 0 0"/>
    </Grid>
</Window>
