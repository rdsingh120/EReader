<Window x:Class="EReader.Views.EBookReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EReader.Views"
        xmlns:userControls="clr-namespace:EReader.UserControls"
        mc:Ignorable="d"
        Title="EBook Reader" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height ="auto"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="GreetingTextBlock"  Text="Hello, User" FontSize="20" Margin="10"/>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="BooksList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <userControls:Book/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Window>
