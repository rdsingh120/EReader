<UserControl x:Class="EReader.UserControls.Book"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EReader.UserControls"
             mc:Ignorable="d" 
             d:Height="auto" Width="auto">
    <Border BorderBrush="Gray" BorderThickness="1" Padding="8" Margin="5">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="BookNameTextBlock"  Text="{Binding Name}" FontSize="20" FontWeight="Bold"/>
            <TextBlock Grid.Row="1" x:Name="AuthorNameTextBlock" Text="{Binding Author}" FontSize="12"/>

        </Grid>
    </Border>
</UserControl>
